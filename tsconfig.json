{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@presentation/*": ["src/presentation/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    },
    "types": ["jest"]
  }
}
